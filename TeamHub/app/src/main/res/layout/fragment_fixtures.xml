<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.theglassboard.teamhub.FragmentFixtures">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="#ffdddddd">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Sections">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FixtureListFrame"
                android:clickable="true"
                android:layout_margin="10dp"
                android:background="#ffffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1"
                    android:id="@+id/FixtureListLayout">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Fixtures"
                        android:id="@+id/FixtureListHeading"
                        android:textColor="#ff444444"
                        android:gravity="top|center"
                        android:background="@drawable/abc_cab_background_top_mtrl_alpha"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:minHeight="25dp"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
