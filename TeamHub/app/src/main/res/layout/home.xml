<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:touchscreenBlocksFocus="false"
    android:background="@color/background_material_light"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/TeamTitle"
        android:background="#ff115bc1"
        android:gravity="top">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nameAndMenu">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/TitleAndMenu"
                android:layout_weight="2.7">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:id="@+id/AppTitle"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:gravity="left|center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="20dp" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/menuButton"
                    android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"
                    android:background="@color/background_dark"
                    android:contentDescription="menuButton"
                    android:layout_weight="5"
                    android:clickable="true"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/clubCrest"
                android:layout_weight="4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/primary_text_default_material_dark"
                android:id="@+id/teamName"
                android:textSize="@dimen/abc_text_size_large_material"
                android:gravity="center"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ScrollView"
        android:background="#ffdddddd"
        android:layout_below="@+id/TeamTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/MenuOptions">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Sections">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:weightSum="3"
        android:minHeight="40dp"
        android:id="@+id/MenuOptions"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeButton"
            android:layout_weight="1"
            android:contentDescription="home_image"
            android:src="@drawable/home"
            android:background="@drawable/abc_textfield_search_activated_mtrl_alpha"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fixturesButton"
            android:layout_weight="1"
            android:contentDescription="fixtures_image"
            android:src="@drawable/fixtures"
            android:background="@color/background_dark"
            android:layout_gravity="top" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableButton"
            android:layout_weight="1"
            android:contentDescription="fixtures_image"
            android:src="@drawable/table"
            android:background="@color/background_dark"
            android:layout_gravity="top" />

        <!--<ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trainingButton"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:contentDescription="fixtures_image"
            android:src="@drawable/training"
            android:background="@color/background_dark" />-->

    </LinearLayout>

</RelativeLayout>